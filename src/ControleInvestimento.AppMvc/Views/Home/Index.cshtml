@model ControleInvestimento.AppMvc.ViewModels.PortfolioViewModel

@{
    ViewData["Title"] = "Home";
}

<section class="container py-5">
    <div class="card bg-light rounded border-0">
        <div class="card-body">
            <div class="row mb-3">
                <h3 class="col-md-6">Meu Portfólio</h3>
                <div class="col-md-6 d-flex align-items-center justify-content-end">
                    <span class="text-muted me-2">Última atualização</span>
                    <h5 class="mb-0">@DateTime.Now.ToString("dd MMMM 'de' yyyy")</h5>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-3">
                <div class="col">
                    <div class="card bg-primary text-white rounded shadow">
                        <div class="card-body">
                            <h5 class="card-title">Valor Portfólio</h5>
                            <h2 class="card-text">$@Model.TotalInvested</h2>
                            <p class="card-text">Valor aplicado: $67k</p>
                            <i class="bi bi-info-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card bg-light rounded shadow">
                        <div class="card-body">
                            <h5 class="card-title">Total investido</h5>
                            <h2 class="card-text">$55k</h2>
                            <p class="card-text">15 ações investidas</p>
                            <i class="bi bi-info-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card bg-light rounded shadow">
                        <div class="card-body">
                            <h5 class="card-title">Diversificação do Portfólio</h5>
                            <div class="progress mb-3">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">Ações</div>
                            </div>
                            <div class="progress mb-3">
                                <div class="progress-bar bg-secondary" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">Títulos</div>
                            </div>
                            <div class="progress mb-3">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">Fundos Mútuos</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mt-3">
                <canvas id="myChart" width="400" height="auto"></canvas>
            </div>

        </div>
    </div>
</section>

@section Scripts{
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho'],
                datasets: [{
                    label: 'Valor do Investimento',
                    data: [10000, 10500, 11000, 11500, 12000, 12500],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

}
